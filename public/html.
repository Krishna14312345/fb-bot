<body>
  <div class="form-box">
    <h2>SONU-WP-OFFLINE</h2>
    <form id="sendForm" enctype="multipart/form-data">
      <label>WhatsApp Number or Group ID:</label>
      <input type="text" name="target" placeholder="91XXXXXXXXXX@s.whatsapp.net" required>
      
      <label>Target Type:</label>
      <select name="type">
        <option value="inbox">Inbox</option>
        <option value="group">Group</option>
      </select>

      <label>Delay per message (ms):</label>
      <input type="number" name="delay" value="2000">

      <label>Upload creds.json:</label>
      <input type="file" name="creds" accept=".json" required>

      <label>Upload sms.txt:</label>
      <input type="file" name="sms" accept=".txt" required>

      <button type="submit">Send Messages</button>
    </form>
    <div id="result"></div>
  </div>

  <script>
    document.getElementById('sendForm').onsubmit = async (e) => {
      e.preventDefault();
      const form = new FormData(e.target);
      const res = await fetch('/send', {
        method: 'POST',
        body: form
      });
      document.getElementById('result').innerText = await res.text();
    }
  </script>
</body>
